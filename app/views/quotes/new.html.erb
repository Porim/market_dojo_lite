<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Submit Quote</h1>

  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">RFQ Details</h2>
    <div class="space-y-3">
      <div>
        <h3 class="text-sm font-medium text-gray-700">Title</h3>
        <p class="mt-1 text-gray-900"><%= @rfq.title %></p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-700">Description</h3>
        <p class="mt-1 text-gray-900"><%= simple_format(@rfq.description) %></p>
      </div>
      <div>
        <h3 class="text-sm font-medium text-gray-700">Deadline</h3>
        <p class="mt-1 text-gray-900"><%= @rfq.deadline.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with(model: [@rfq, @quote], local: true) do |form| %>
      <% if @quote.errors.any? %>
        <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
          <h3 class="font-bold mb-2"><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h3>
          <ul class="list-disc list-inside">
            <% @quote.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= form.label :price, "Quote Price (Â£)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :price, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :notes, "Additional Notes", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :notes, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Any additional information about your quote..." %>
        </div>

        <div class="flex justify-end space-x-3 pt-4">
          <%= link_to "Cancel", @rfq, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
          <%= form.submit "Submit Quote", class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>