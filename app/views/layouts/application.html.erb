              <%= button_to t('navigation.logout'), destroy_user_session_path, method: :delete, class: "block w-full text-left text-sm text-gray-700 hover:text-gray-900" %>
            <% else %>
              <%= link_to t('navigation.login'), new_user_session_path, class: "block text-sm text-gray-700 hover:text-gray-900" %>
