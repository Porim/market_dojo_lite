<div class="space-y-6">
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @rfq.title %></h1>
        <p class="text-gray-500 mt-1"><%= t('rfqs.show.by') %> <%= @rfq.user.company_name %></p>
      </div>
      <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full 
        <%= @rfq.status == 'published' ? 'bg-green-100 text-green-800' : 
           @rfq.status == 'closed' ? 'bg-red-100 text-red-800' : 
           'bg-gray-100 text-gray-800' %>">
        <%= t("common.status.#{@rfq.status}") %>
      </span>
    </div>

    <div class="mt-6 space-y-4">
      <div>
        <h3 class="text-sm font-medium text-gray-700"><%= t('rfqs.show.description') %></h3>
        <p class="mt-1 text-gray-900"><%= simple_format(@rfq.description) %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-700"><%= t('rfqs.show.deadline') %></h3>
        <p class="mt-1 text-gray-900"><%= @rfq.deadline.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <% if @rfq.documents.attached? %>
        <div>
          <h3 class="text-sm font-medium text-gray-700">Attachments</h3>
          <div class="mt-2 space-y-2">
            <% @rfq.documents.each do |document| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-3">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= document.filename %></p>
                    <p class="text-xs text-gray-500"><%= number_to_human_size(document.byte_size) %></p>
                  </div>
                </div>
                <%= link_to "Download", document_path(document.signed_id, disposition: "attachment"), 
                    class: "text-sm text-blue-600 hover:text-blue-500" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if current_user.buyer? && @rfq.user == current_user %>
      <div class="mt-6 flex space-x-3">
        <%= link_to "Edit", edit_rfq_path(@rfq), class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        <% if @rfq.status == 'published' && @rfq.auction.nil? %>
          <%= button_to "Start Auction", rfq_auction_path(@rfq), method: :post, 
              params: { auction: { start_time: Time.current, end_time: 5.minutes.from_now, current_price: @quotes.first&.price } },
              class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
        <% end %>
      </div>
    <% elsif current_user.supplier? && @rfq.status == 'published' %>
      <% if @rfq.quotes.where(user: current_user).none? %>
        <div class="mt-6">
          <%= link_to "Submit Quote", new_rfq_quote_path(@rfq), class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <% if @auction %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-2">Active Auction</h2>
      <p class="text-gray-600">
        Current Price: £<%= @auction.current_price || "N/A" %> | 
        Status: <%= @auction.status.capitalize %> |
        <% if @auction.active? %>
          Time Remaining: <%= distance_of_time_in_words(Time.current, @auction.end_time) %>
        <% else %>
          Ends: <%= @auction.end_time.strftime("%B %d at %I:%M %p") %>
        <% end %>
      </p>
      <%= link_to "View Auction", rfq_auction_path(@rfq), class: "mt-3 inline-block px-4 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700" %>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Quotes (<%= @quotes.count %>)</h2>
    
    <% if @quotes.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Supplier</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Submitted</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @quotes.each do |quote| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= quote.user.company_name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium">
                  £<%= quote.price %>
                </td>
                <td class="px-6 py-4">
                  <%= truncate(quote.notes, length: 100) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= quote.created_at.strftime("%B %d, %Y") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">No quotes submitted yet.</p>
    <% end %>
  </div>
</div>