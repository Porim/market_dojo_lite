<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Create New RFQ</h1>

  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with(model: @rfq, local: true) do |form| %>
      <% if @rfq.errors.any? %>
        <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
          <h3 class="font-bold mb-2"><%= pluralize(@rfq.errors.count, "error") %> prohibited this RFQ from being saved:</h3>
          <ul class="list-disc list-inside">
            <% @rfq.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-4">
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :deadline, class: "block text-sm font-medium text-gray-700" %>
          <%= form.datetime_field :deadline, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
          <%= form.select :status, options_for_select([['Draft', 'draft'], ['Published', 'published']], @rfq.status), {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div class="flex justify-end space-x-3 pt-4">
          <%= link_to "Cancel", rfqs_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
          <%= form.submit "Create RFQ", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>