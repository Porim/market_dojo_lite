<div class="space-y-6" data-controller="auction" data-auction-id="<%= @auction&.id %>" data-auction-end-time="<%= @auction&.end_time&.iso8601 %>">
  <div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= t('auctions.show.title') %>: <%= @rfq.title %></h1>
    
    <% if @auction %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-gray-50 p-4 rounded">
          <h3 class="text-sm font-medium text-gray-700"><%= t('auctions.show.current_lowest_price') %></h3>
          <p class="text-2xl font-bold text-green-600">£<%= @auction.current_price || "N/A" %></p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded">
          <h3 class="text-sm font-medium text-gray-700"><%= t('auctions.show.time_remaining') %></h3>
          <p class="text-2xl font-bold" data-auction-target="timer">
            <% if @auction.active? %>
              <%= distance_of_time_in_words(Time.current, @auction.end_time) %>
            <% else %>
              <%= t('auctions.show.ended') %>
            <% end %>
          </p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded">
          <h3 class="text-sm font-medium text-gray-700"><%= t('auctions.show.status') %></h3>
          <p class="text-2xl font-bold <%= @auction.active? ? 'text-green-600' : 'text-red-600' %>">
            <%= @auction.status.capitalize %>
          </p>
        </div>
      </div>

      <% if current_user.supplier? && @auction.active? %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
          <h2 class="text-xl font-semibold mb-4"><%= t('auctions.show.place_your_bid') %></h2>
          <%= form_with model: [@auction, Bid.new], url: bid_auction_path(@auction), method: :post, local: true do |form| %>
            <div class="flex space-x-4">
              <div class="flex-1">
                <%= form.label :amount, t('auctions.show.bid_amount'), class: "block text-sm font-medium text-gray-700" %>
                <%= form.number_field :amount, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: t('auctions.show.bid_placeholder') %>
              </div>
              <div class="flex items-end">
                <%= form.submit t('auctions.show.place_bid'), class: "px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="mt-6">
        <h2 class="text-xl font-semibold mb-4"><%= t('auctions.show.bid_history') %></h2>
        <% if @bids&.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('auctions.show.table.supplier') %></th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('auctions.show.table.bid_amount') %></th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('auctions.show.table.time') %></th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @bids.each_with_index do |bid, index| %>
                  <tr class="<%= index == 0 ? 'bg-green-50' : '' %>">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= bid.user.company_name %>
                      <% if index == 0 %><span class="ml-2 text-xs text-green-600 font-semibold">(<%= t('auctions.show.leading') %>)</span><% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap font-medium">
                      £<%= bid.amount %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= bid.created_at.strftime("%I:%M:%S %p") %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-500"><%= t('auctions.show.no_bids') %></p>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg mb-4"><%= t('auctions.show.no_auction') %></p>
        <% if current_user.buyer? && @rfq.user == current_user %>
          <%= link_to t('auctions.show.back_to_rfq'), @rfq, class: "text-blue-600 hover:text-blue-900" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>