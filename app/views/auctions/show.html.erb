<div class="space-y-6" data-controller="auction" data-auction-id="<%= @auction&.id %>" data-auction-end-time="<%= @auction&.end_time&.iso8601 %>">
  <div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-4">Auction: <%= @rfq.title %></h1>
    
    <% if @auction %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-gray-50 p-4 rounded">
          <h3 class="text-sm font-medium text-gray-700">Current Lowest Price</h3>
          <p class="text-2xl font-bold text-green-600">£<%= @auction.current_price || "N/A" %></p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded">
          <h3 class="text-sm font-medium text-gray-700">Time Remaining</h3>
          <p class="text-2xl font-bold" data-auction-target="timer">
            <% if @auction.active? %>
              <%= distance_of_time_in_words(Time.current, @auction.end_time) %>
            <% else %>
              Ended
            <% end %>
          </p>
        </div>
        
        <div class="bg-gray-50 p-4 rounded">
          <h3 class="text-sm font-medium text-gray-700">Status</h3>
          <p class="text-2xl font-bold <%= @auction.active? ? 'text-green-600' : 'text-red-600' %>">
            <%= @auction.status.capitalize %>
          </p>
        </div>
      </div>

      <% if current_user.supplier? && @auction.active? %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
          <h2 class="text-xl font-semibold mb-4">Place Your Bid</h2>
          <%= form_with url: bid_auction_path(@auction), method: :post, local: true do |form| %>
            <div class="flex space-x-4">
              <div class="flex-1">
                <%= form.label :amount, "Bid Amount (£)", class: "block text-sm font-medium text-gray-700" %>
                <%= form.number_field :amount, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Must be lower than current price" %>
              </div>
              <div class="flex items-end">
                <%= form.submit "Place Bid", class: "px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="mt-6">
        <h2 class="text-xl font-semibold mb-4">Bid History</h2>
        <% if @bids&.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Supplier</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bid Amount</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @bids.each_with_index do |bid, index| %>
                  <tr class="<%= index == 0 ? 'bg-green-50' : '' %>">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <%= bid.user.company_name %>
                      <% if index == 0 %><span class="ml-2 text-xs text-green-600 font-semibold">(Leading)</span><% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap font-medium">
                      £<%= bid.amount %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= bid.created_at.strftime("%I:%M:%S %p") %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-500">No bids placed yet.</p>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg mb-4">No auction has been created for this RFQ yet.</p>
        <% if current_user.buyer? && @rfq.user == current_user %>
          <%= link_to "Back to RFQ", @rfq, class: "text-blue-600 hover:text-blue-900" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>