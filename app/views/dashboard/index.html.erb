<% if user_signed_in? %>
  <% if current_user.buyer? %>
    <!-- Buyer Dashboard -->
    <div class="space-y-6">
      <!-- Header with Stats -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg shadow-lg p-8 text-white">
        <h1 class="text-3xl font-bold mb-2">Welcome back, <%= current_user.name %>!</h1>
        <p class="text-blue-100 mb-6">Here's your procurement overview</p>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @rfqs.count %></div>
            <div class="text-sm text-blue-100">Total RFQs</div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @rfqs.active.count %></div>
            <div class="text-sm text-blue-100">Active RFQs</div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @rfqs.map(&:quotes).flatten.count %></div>
            <div class="text-sm text-blue-100">Quotes Received</div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @active_auctions.count %></div>
            <div class="text-sm text-blue-100">Live Auctions</div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to new_rfq_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-blue-600" do %>
          <div class="flex items-center">
            <div class="bg-blue-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Create New RFQ</h3>
              <p class="text-sm text-gray-600">Start a new procurement request</p>
            </div>
          </div>
        <% end %>

        <%= link_to rfqs_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-green-600" do %>
          <div class="flex items-center">
            <div class="bg-green-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">View All RFQs</h3>
              <p class="text-sm text-gray-600">Manage your requests</p>
            </div>
          </div>
        <% end %>

        <%= link_to analytics_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-purple-600" do %>
          <div class="flex items-center">
            <div class="bg-purple-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">View Analytics</h3>
              <p class="text-sm text-gray-600">Track your performance</p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent RFQs -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">Recent RFQs</h2>
            <%= link_to "View All", rfqs_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @rfqs.any? %>
              <div class="space-y-4">
                <% @rfqs.limit(5).each do |rfq| %>
                  <div class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 rounded-full <%= rfq.active? ? 'bg-green-100' : 'bg-gray-100' %> flex items-center justify-center">
                        <svg class="w-5 h-5 <%= rfq.active? ? 'text-green-600' : 'text-gray-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        <%= link_to rfq.title, rfq_path(rfq), class: "hover:text-blue-600" %>
                      </p>
                      <p class="text-sm text-gray-500">
                        <%= rfq.quotes.count %> quotes • Due <%= rfq.deadline.strftime("%b %d") %>
                      </p>
                    </div>
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= rfq.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= rfq.status.capitalize %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500">No RFQs created yet</p>
                <%= link_to "Create your first RFQ", new_rfq_path, class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Active Auctions -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">Active Auctions</h2>
            <%= link_to "View All", auctions_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @active_auctions.any? %>
              <div class="space-y-4">
                <% @active_auctions.limit(5).each do |auction| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="font-medium text-gray-900">
                        <%= link_to auction.rfq.title, rfq_auction_path(auction.rfq), class: "hover:text-blue-600" %>
                      </h3>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        Live
                      </span>
                    </div>
                    <div class="grid grid-cols-2 gap-2 text-sm">
                      <div>
                        <span class="text-gray-500">Current Price:</span>
                        <span class="font-semibold text-green-600">£<%= number_with_delimiter(auction.current_price || 0) %></span>
                      </div>
                      <div>
                        <span class="text-gray-500">Time Left:</span>
                        <span class="font-semibold text-red-600"><%= distance_of_time_in_words(Time.current, auction.end_time) %></span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500">No active auctions</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Supplier Dashboard -->
    <div class="space-y-6">
      <!-- Header with Stats -->
      <div class="bg-gradient-to-r from-green-600 to-green-800 rounded-lg shadow-lg p-8 text-white">
        <h1 class="text-3xl font-bold mb-2">Welcome back, <%= current_user.name %>!</h1>
        <p class="text-green-100 mb-6">Here's your supplier overview</p>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @active_rfqs.count %></div>
            <div class="text-sm text-green-100">Open RFQs</div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @my_quotes.count %></div>
            <div class="text-sm text-green-100">Quotes Submitted</div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @my_quotes.where(status: 'accepted').count %></div>
            <div class="text-sm text-green-100">Won Quotes</div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @active_auctions.count %></div>
            <div class="text-sm text-green-100">Live Auctions</div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to rfqs_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-blue-600" do %>
          <div class="flex items-center">
            <div class="bg-blue-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Browse RFQs</h3>
              <p class="text-sm text-gray-600">Find new opportunities</p>
            </div>
          </div>
        <% end %>

        <%= link_to auctions_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-green-600" do %>
          <div class="flex items-center">
            <div class="bg-green-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Live Auctions</h3>
              <p class="text-sm text-gray-600">Join active bidding</p>
            </div>
          </div>
        <% end %>

        <%= link_to reports_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-purple-600" do %>
          <div class="flex items-center">
            <div class="bg-purple-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Performance Reports</h3>
              <p class="text-sm text-gray-600">Track your success</p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Available RFQs -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">New Opportunities</h2>
            <%= link_to "View All", rfqs_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @active_rfqs.any? %>
              <div class="space-y-4">
                <% @active_rfqs.limit(5).each do |rfq| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="font-medium text-gray-900">
                        <%= link_to rfq.title, rfq_path(rfq), class: "hover:text-blue-600" %>
                      </h3>
                      <% if rfq.quotes.where(user: current_user).none? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          New
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Quoted
                        </span>
                      <% end %>
                    </div>
                    <p class="text-sm text-gray-600 mb-3"><%= rfq.user.company_name %></p>
                    <div class="flex justify-between items-center">
                      <span class="text-sm text-gray-500">Due <%= rfq.deadline.strftime("%b %d") %></span>
                      <% if rfq.quotes.where(user: current_user).none? %>
                        <%= link_to "Submit Quote", new_rfq_quote_path(rfq), class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500">No active RFQs available</p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- My Recent Quotes -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">My Recent Quotes</h2>
            <%= link_to "View All", rfqs_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @my_quotes.any? %>
              <div class="space-y-4">
                <% @my_quotes.limit(5).each do |quote| %>
                  <div class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                        <span class="text-sm font-semibold text-gray-600">£</span>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        <%= link_to quote.rfq.title, rfq_path(quote.rfq), class: "hover:text-blue-600" %>
                      </p>
                      <p class="text-sm text-gray-500">
                        £<%= number_with_delimiter(quote.price) %> • <%= quote.created_at.strftime("%b %d") %>
                      </p>
                    </div>
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <%= quote.status || 'Pending' %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500">No quotes submitted yet</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Active Auctions Full Width -->
      <div class="bg-white rounded-lg shadow-md">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Live Auctions</h2>
        </div>
        <div class="p-6">
          <% if @active_auctions.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              <% @active_auctions.each do |auction| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow">
                  <div class="flex justify-between items-start mb-3">
                    <h3 class="font-medium text-gray-900 text-sm">
                      <%= auction.rfq.title %>
                    </h3>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Live
                    </span>
                  </div>
                  <div class="space-y-2 mb-3">
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-500">Current Price:</span>
                      <span class="font-semibold text-green-600">£<%= number_with_delimiter(auction.current_price || 0) %></span>
                    </div>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-500">Time Left:</span>
                      <span class="font-semibold text-red-600"><%= distance_of_time_in_words(Time.current, auction.end_time) %></span>
                    </div>
                  </div>
                  <%= link_to "Join Auction", rfq_auction_path(auction.rfq), class: "w-full bg-green-600 text-white text-sm px-4 py-2 rounded-md hover:bg-green-700 text-center block" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="mt-2 text-sm text-gray-500">No active auctions at the moment</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

<% else %>
  <!-- Landing Page for Non-logged in Users -->
  <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-5xl font-extrabold text-gray-900 mb-6">
          Welcome to Market Dojo Lite
        </h1>
        <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
          The simplified eProcurement platform that connects buyers with suppliers, streamlines RFQ processes, and enables competitive reverse auctions.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto mb-16">
        <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-shadow">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-bold mb-4 text-gray-900">For Buyers</h2>
          <ul class="space-y-3 mb-6">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Create and manage RFQs efficiently</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Run competitive reverse auctions</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Compare quotes side-by-side</span>
            </li>
