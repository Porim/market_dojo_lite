<% if user_signed_in? %>
  <% if current_user.buyer? %>
    <!-- Buyer Dashboard -->
    <div class="space-y-6">
      <!-- Header with Stats -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-lg shadow-lg p-8 text-white">
        <h1 class="text-3xl font-bold mb-2"><%= t('dashboard.buyer.welcome', name: current_user.name) %></h1>
        <p class="text-blue-100 mb-6"><%= t('dashboard.buyer.overview') %></p>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @rfqs.count %></div>
            <div class="text-sm text-blue-100"><%= t('dashboard.buyer.stats.total_rfqs') %></div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @rfqs.active.count %></div>
            <div class="text-sm text-blue-100"><%= t('dashboard.buyer.stats.active_rfqs') %></div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @rfqs.map(&:quotes).flatten.count %></div>
            <div class="text-sm text-blue-100"><%= t('dashboard.buyer.stats.quotes_received') %></div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @active_auctions.count %></div>
            <div class="text-sm text-blue-100"><%= t('dashboard.buyer.stats.live_auctions') %></div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to new_rfq_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-blue-600" do %>
          <div class="flex items-center">
            <div class="bg-blue-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900"><%= t('dashboard.buyer.quick_actions.create_rfq.title') %></h3>
              <p class="text-sm text-gray-600"><%= t('dashboard.buyer.quick_actions.create_rfq.description') %></p>
            </div>
          </div>
        <% end %>

        <%= link_to rfqs_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-green-600" do %>
          <div class="flex items-center">
            <div class="bg-green-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900"><%= t('dashboard.buyer.quick_actions.view_rfqs.title') %></h3>
              <p class="text-sm text-gray-600"><%= t('dashboard.buyer.quick_actions.view_rfqs.description') %></p>
            </div>
          </div>
        <% end %>

        <%= link_to analytics_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-purple-600" do %>
          <div class="flex items-center">
            <div class="bg-purple-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900"><%= t('dashboard.buyer.quick_actions.analytics.title') %></h3>
              <p class="text-sm text-gray-600"><%= t('dashboard.buyer.quick_actions.analytics.description') %></p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent RFQs -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900"><%= t('dashboard.buyer.sections.recent_rfqs') %></h2>
            <%= link_to t('dashboard.buyer.sections.view_all'), rfqs_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @rfqs.any? %>
              <div class="space-y-4">
                <% @rfqs.limit(5).each do |rfq| %>
                  <div class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 rounded-full <%= rfq.active? ? 'bg-green-100' : 'bg-gray-100' %> flex items-center justify-center">
                        <svg class="w-5 h-5 <%= rfq.active? ? 'text-green-600' : 'text-gray-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        <%= link_to rfq.title, rfq_path(rfq), class: "hover:text-blue-600" %>
                      </p>
                      <p class="text-sm text-gray-500">
                        <%= t('dashboard.buyer.recent_rfqs.quotes_due', count: rfq.quotes.count, date: rfq.deadline.strftime("%b %d")) %>
                      </p>
                    </div>
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= rfq.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= t("common.status.#{rfq.status}", default: rfq.status.capitalize) %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500"><%= t('dashboard.buyer.recent_rfqs.no_rfqs') %></p>
                <%= link_to t('dashboard.buyer.recent_rfqs.create_first'), new_rfq_path, class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Active Auctions -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900"><%= t('dashboard.buyer.sections.active_auctions') %></h2>
            <%= link_to t('dashboard.buyer.sections.view_all'), auctions_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @active_auctions.any? %>
              <div class="space-y-4">
                <% @active_auctions.limit(5).each do |auction| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="font-medium text-gray-900">
                        <%= link_to auction.rfq.title, rfq_auction_path(auction.rfq), class: "hover:text-blue-600" %>
                      </h3>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <%= t('dashboard.buyer.auctions.live') %>
                      </span>
                    </div>
                    <div class="grid grid-cols-2 gap-2 text-sm">
                      <div>
                        <span class="text-gray-500"><%= t('dashboard.buyer.auctions.current_price') %></span>
                        <span class="font-semibold text-green-600">£<%= number_with_delimiter(auction.current_price || 0) %></span>
                      </div>
                      <div>
                        <span class="text-gray-500"><%= t('dashboard.buyer.auctions.time_left') %></span>
                        <span class="font-semibold text-red-600"><%= distance_of_time_in_words(Time.current, auction.end_time) %></span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500"><%= t('dashboard.buyer.auctions.no_auctions') %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Supplier Dashboard -->
    <div class="space-y-6">
      <!-- Header with Stats -->
      <div class="bg-gradient-to-r from-green-600 to-green-800 rounded-lg shadow-lg p-8 text-white">
        <h1 class="text-3xl font-bold mb-2"><%= t('dashboard.supplier.welcome', name: current_user.name) %></h1>
        <p class="text-green-100 mb-6"><%= t('dashboard.supplier.overview') %></p>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @active_rfqs.count %></div>
            <div class="text-sm text-green-100"><%= t('dashboard.supplier.stats.open_rfqs') %></div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @my_quotes.count %></div>
            <div class="text-sm text-green-100"><%= t('dashboard.supplier.stats.quotes_submitted') %></div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @my_quotes.where(status: 'accepted').count %></div>
            <div class="text-sm text-green-100"><%= t('dashboard.supplier.stats.won_quotes') %></div>
          </div>
          <div class="bg-white/10 backdrop-blur rounded-lg p-4">
            <div class="text-3xl font-bold"><%= @active_auctions.count %></div>
            <div class="text-sm text-green-100"><%= t('dashboard.supplier.stats.live_auctions') %></div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <%= link_to rfqs_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-blue-600" do %>
          <div class="flex items-center">
            <div class="bg-blue-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900"><%= t('dashboard.supplier.quick_actions.browse_rfqs.title') %></h3>
              <p class="text-sm text-gray-600"><%= t('dashboard.supplier.quick_actions.browse_rfqs.description') %></p>
            </div>
          </div>
        <% end %>

        <%= link_to auctions_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-green-600" do %>
          <div class="flex items-center">
            <div class="bg-green-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900"><%= t('dashboard.supplier.quick_actions.live_auctions.title') %></h3>
              <p class="text-sm text-gray-600"><%= t('dashboard.supplier.quick_actions.live_auctions.description') %></p>
            </div>
          </div>
        <% end %>

        <%= link_to reports_path, class: "bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-purple-600" do %>
          <div class="flex items-center">
            <div class="bg-purple-100 rounded-full p-3 mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900"><%= t('dashboard.supplier.quick_actions.reports.title') %></h3>
              <p class="text-sm text-gray-600"><%= t('dashboard.supplier.quick_actions.reports.description') %></p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Available RFQs -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900"><%= t('dashboard.supplier.sections.new_opportunities') %></h2>
            <%= link_to t('dashboard.supplier.sections.view_all'), rfqs_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @active_rfqs.any? %>
              <div class="space-y-4">
                <% @active_rfqs.limit(5).each do |rfq| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="font-medium text-gray-900">
                        <%= link_to rfq.title, rfq_path(rfq), class: "hover:text-blue-600" %>
                      </h3>
                      <% if rfq.quotes.where(user: current_user).none? %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          <%= t('dashboard.supplier.opportunities.new') %>
                        </span>
                      <% else %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          <%= t('dashboard.supplier.opportunities.quoted') %>
                        </span>
                      <% end %>
                    </div>
                    <p class="text-sm text-gray-600 mb-3"><%= rfq.user.company_name %></p>
                    <div class="flex justify-between items-center">
                      <span class="text-sm text-gray-500"><%= t('dashboard.supplier.opportunities.due', date: rfq.deadline.strftime("%b %d")) %></span>
                      <% if rfq.quotes.where(user: current_user).none? %>
                        <%= link_to t('dashboard.supplier.opportunities.submit_quote'), new_rfq_quote_path(rfq), class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500"><%= t('dashboard.supplier.opportunities.no_active_rfqs') %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- My Recent Quotes -->
        <div class="bg-white rounded-lg shadow-md">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900"><%= t('dashboard.supplier.sections.my_recent_quotes') %></h2>
            <%= link_to t('dashboard.supplier.sections.view_all'), rfqs_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="p-6">
            <% if @my_quotes.any? %>
              <div class="space-y-4">
                <% @my_quotes.limit(5).each do |quote| %>
                  <div class="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors">
                    <div class="flex-shrink-0">
                      <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center">
                        <span class="text-sm font-semibold text-gray-600">£</span>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900">
                        <%= link_to quote.rfq.title, rfq_path(quote.rfq), class: "hover:text-blue-600" %>
                      </p>
                      <p class="text-sm text-gray-500">
                        £<%= number_with_delimiter(quote.price) %> • <%= quote.created_at.strftime("%b %d") %>
                      </p>
                    </div>
                    <div class="flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        <%= quote.status || t('dashboard.supplier.quotes.pending') %>
                      </span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500"><%= t('dashboard.supplier.quotes.no_quotes') %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Active Auctions Full Width -->
      <div class="bg-white rounded-lg shadow-md">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900"><%= t('dashboard.supplier.sections.live_auctions') %></h2>
        </div>
        <div class="p-6">
          <% if @active_auctions.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              <% @active_auctions.each do |auction| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-lg transition-shadow">
                  <div class="flex justify-between items-start mb-3">
                    <h3 class="font-medium text-gray-900 text-sm">
                      <%= auction.rfq.title %>
                    </h3>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <%= t('dashboard.supplier.auctions.live') %>
                    </span>
                  </div>
                  <div class="space-y-2 mb-3">
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-500"><%= t('dashboard.supplier.auctions.current_price') %></span>
                      <span class="font-semibold text-green-600">£<%= number_with_delimiter(auction.current_price || 0) %></span>
                    </div>
                    <div class="flex justify-between text-sm">
                      <span class="text-gray-500"><%= t('dashboard.supplier.auctions.time_left') %></span>
                      <span class="font-semibold text-red-600"><%= distance_of_time_in_words(Time.current, auction.end_time) %></span>
                    </div>
                  </div>
                  <%= link_to t('dashboard.supplier.auctions.join_auction'), rfq_auction_path(auction.rfq), class: "w-full bg-green-600 text-white text-sm px-4 py-2 rounded-md hover:bg-green-700 text-center block" %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="mt-2 text-sm text-gray-500"><%= t('dashboard.supplier.auctions.no_auctions') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

<% else %>
  <!-- Landing Page for Non-logged in Users -->
  <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="text-center">
        <h1 class="text-5xl font-extrabold text-gray-900 mb-6">
          <%= t('dashboard.landing.hero.title') %>
        </h1>
        <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
          <%= t('dashboard.landing.hero.subtitle') %>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto mb-16">
        <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition-shadow">
