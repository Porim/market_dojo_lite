<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <%= link_to "← Back to Reports", reports_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
  
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Spend Analysis</h1>
    <div class="flex space-x-2">
      <%= link_to "Export CSV", spend_analysis_reports_path(format: :csv, start_date: @start_date, end_date: @end_date), 
          class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
      <%= link_to "Export PDF", spend_analysis_reports_path(format: :pdf, start_date: @start_date, end_date: @end_date), 
          class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
    </div>
  </div>
  
  <!-- Date Range Filter -->
  <div class="bg-white shadow rounded-lg p-4 mb-6">
    <%= form_with url: spend_analysis_reports_path, method: :get, local: true, class: "flex items-end space-x-4" do |f| %>
      <div>
        <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :start_date, value: @start_date, class: "mt-1 block rounded-md border-gray-300 shadow-sm" %>
      </div>
      <div>
        <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :end_date, value: @end_date, class: "mt-1 block rounded-md border-gray-300 shadow-sm" %>
      </div>
      <%= f.submit "Update", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    <% end %>
  </div>
  
  <!-- Spend Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-sm font-medium text-gray-500">Total Spend</p>
      <p class="text-2xl font-bold text-gray-900">£<%= number_with_delimiter(@spend_by_month.values.sum.round(2)) %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-sm font-medium text-gray-500">Average Monthly</p>
      <p class="text-2xl font-bold text-gray-900">£<%= number_with_delimiter((@spend_by_month.values.sum / @spend_by_month.size).round(2)) rescue 0 %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-sm font-medium text-gray-500">Total Savings</p>
      <p class="text-2xl font-bold text-green-600">£<%= number_with_delimiter(@savings_data.sum { |s| s[:savings_amount] }.round(2)) %></p>
    </div>
    <div class="bg-white shadow rounded-lg p-6">
      <p class="text-sm font-medium text-gray-500">Avg Savings %</p>
      <p class="text-2xl font-bold text-green-600"><%= @savings_data.any? ? (@savings_data.sum { |s| s[:savings_percentage] } / @savings_data.size).round(2) : 0 %>%</p>
    </div>
  </div>
  
  <!-- Spend by Month Chart -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold mb-4">Monthly Spend Trend</h2>
    <%= column_chart @spend_by_month, prefix: "£", thousands: ",", height: "300px" %>
  </div>
  
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Top Categories -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Top Categories by Spend</h2>
      <% if @top_categories.any? %>
        <%= pie_chart @top_categories, prefix: "£", thousands: ",", height: "300px" %>
      <% else %>
        <p class="text-gray-500">No data available</p>
      <% end %>
    </div>
    
    <!-- Savings Opportunities -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Top Savings Opportunities</h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">RFQ</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Savings</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">%</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @savings_data.first(5).each do |saving| %>
              <tr>
                <td class="px-4 py-2 text-sm"><%= truncate(saving[:rfq], length: 30) %></td>
                <td class="px-4 py-2 text-sm font-medium text-green-600">£<%= number_with_delimiter(saving[:savings_amount].round(2)) %></td>
                <td class="px-4 py-2 text-sm"><%= saving[:savings_percentage] %>%</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>